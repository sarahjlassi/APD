<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="category_tree_view">
            <field name="name">shop tree</field>
            <field name="model">shop.category</field>
            <field name="arch" type="xml">
                <tree string="shop category list">
                    <field name="name"/>
                </tree>
            </field>
        </record>


        <record model="ir.ui.view" id="category_form_view">
            <field name="name">shop category form</field>
            <field name="model">shop.category</field>
            <field name="arch" type="xml">
                <form string="shop category form">
                    <sheet>
                        <group>
                            <field name="name"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>